<div class="bn-section-2020 shopify-section index-section top-banner-section">
        {% if section.settings.top_text != blank %}
        <div style="background-color: {{section.settings.background_title}}" class="top_title_bar">
          
          <h1 class="bn-collection-header">{{section.settings.top_text}}</h1>
        
          <div class="banner_section_content">
            
            {% if section.settings.title_second != blank %}
            <h3>{{ section.settings.title_second}}</h3>
            {% endif %}
          </div>
        </div>
        {% endif %}
        {% assign mobile_aspect = 1 | divided_by: section.settings.image_mobile.aspect_ratio | times: 100 %}
        {% assign img_url_mobile = section.settings.image_mobile | img_url: '1x1' | replace: '_1x1' %}
          <div class="top_image_content">
            <a href="{{section.settings.image_link}}">
       
        
                <img class="feature-row__image lazyload" 
           data-src="{{ section.settings.image | img_url: "2000x2000" }}"
             img-mobile="{{img_url_mobile}}"
               aspect-mobile="{{mobile_aspect}}"
            data-aspectratio="{{ section.settings.image.aspect_ratio }}"
            data-sizes="auto"
            alt="{{ section.settings.image.alt | escape }}">
              
          
            </a>
          </div>
           {% if section.settings.title_left != blank and section.settings.logo_right != blank %} 
        <div class="bottom_image_section">
          {% if section.settings.title_left != blank %}
          <div class="bottom_left_article">
            <p>
            
            {{ section.settings.title_left | escape }}
           
            </p>
          </div>
           {% endif %}
           {% if section.settings.logo_right != blank %}
          <div class="bottom_right_article">
            
                <img class="logo_right__image lazyload"
            data-src="{{ section.settings.logo_right | img_url: "800x800" }}"
            data-aspectratio="{{ section.settings.logo_right.aspect_ratio }}"
            data-sizes="auto"
            alt="{{ section.settings.logo_right.alt | escape }}">
            </div>
            {% endif %}
        </div>
        {% endif %}
</div>

{% schema %}
  {
    "name": "Custom Banner",
    "class": "index-section custom-banner",
    "settings": [
    {
        "type": "text",
        "id": "top_text",
        "label": "Heading"
      },
      {
        "type": "text",
        "id": "title_second",
        "label": "Heading 2"
      },
      {
        "type": "text",
        "id": "background_title",
        "label": "Banner Background",
        "default": "#FFFFFF"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image Desktop"
      },
      {
        "type": "image_picker",
        "id": "image_mobile",
        "label": "Image Mobile"
      },
      {
        "type": "url",
        "id": "image_link",
        "label": "link here top"
      },
      
      {
        "type": "text",
        "id": "title_left",
        "label": "Left title"
      },
   {
        "type": "image_picker",
        "id": "logo_right",
        "label": "Logo"
      }
      
    ],
    "presets": [
      {
        "name": "Top Banner Image",
        "category": "Image"
      }
    ]
  }
{% endschema %}
