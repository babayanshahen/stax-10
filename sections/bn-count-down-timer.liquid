      "label": "Link"
    },{
      "type": "image_picker",
      "id": "backgroundImage02",
      "label": "Mobile Background image "
    } 
    

  ],
  "presets": [
    {
      "name": "Count Down Timer",
      "category": "Date"
    }
  ]
}
