<div class="bn_count_down_whloe_one_container">
  <!-- <div class="bn-container"></div> -->
  {% if section.settings.backgroundImage01 != blank %}
    <a href="{{ section.settings.url01}}" class="">
      <div class="bn_count_down_background"  data-mobile-style="background-image:url({{ section.settings.backgroundImage02 | img_url: '800x'}});background-repeat: no-repeat;background-size: cover;">
        <img class="bn_count_down_image" src="{{ section.settings.backgroundImage01 | img_url: '1500x' }}">
        <img class="bn_count_down_mobileimage bn_image_none" src="{{ section.settings.backgroundImage02 | img_url: '800x'}}">

        {% comment %} <div class="bn_count_down_timer_container" style="background-color: {{ section.settings.background_color | color_modify: 'alpha', 0.35 }};"> {% endcomment %}

          {% if section.settings.count_down_position == "right" %}
            <div class="bn_count_down_timer_container" style="background-color: {{ section.settings.background_color }};">
                <p   class="bn_count_down_timer_container_text" style="color: {{ section.settings.text_color }};">{{ section.settings.bn_count_down_timer_text}}</p>
                <div class="pomodoro bn_cout_down_timer_content">
                    <div id="clock" class="row">
                        <div class="hidden year" data-select="{{section.settings.year}}"></div>
                        <div class="hidden days" data-select="{{section.settings.day}}"></div>
                        <div class="hidden hours" data-select="{{section.settings.hour}}"></div>
                        <div class="hidden minutes" data-select="{{section.settings.minute}}"></div>
                        <div class="hidden seconds" data-select="{{section.settings.second}}"></div>
                        <div class="hidden timezone" data-select="{{section.settings.timezone}}"></div>
                      <div class="timer"><div class="middle"></div></div>
                    </div>
                  </div>
                  <div class="bn_count_down_text_and_button_container">
                    <h3 class="bn_count_down_buy_now_text" style="color:{{ section.settings.image_subheading_03_color}}">{{ section.settings.image_subheading_03}}</h3>
                    {% if section.settings.image_03_button_text != blank %}
                      <button class="bn_count_down_buy_now " onclick="location.href='{{ section.settings.url01}}'" style="color:{{ section.settings.image_03_button_text_color}};background-color:{{ section.settings.image_03_button_background_color}}">
                        {{ section.settings.image_03_button_text}}
                      </button>
                    {% endif %}
                  </div>
            </div>
          {% endif %}
          {% if section.settings.count_down_position == "left" %}
            <div class="bn_count_down_timer_container_flex_start" style="background-color:{{ section.settings.background_color | color_modify: 'alpha', 0.35 }};"> 
                <p   class="bn_count_down_timer_container_text_left" style="color: {{ section.settings.text_color }};">{{ section.settings.bn_count_down_timer_text}}</p>
                <div class="pomodoro bn_cout_down_timer_content_left">
                    <div id="clock" class="row">
                        <div class="hidden year" data-select="{{section.settings.year}}"></div>
                        <div class="hidden days" data-select="{{section.settings.day}}"></div>
                        <div class="hidden hours" data-select="{{section.settings.hour}}"></div>
                        <div class="hidden minutes" data-select="{{section.settings.minute}}"></div>
                        <div class="hidden seconds" data-select="{{section.settings.second}}"></div>
                        <div class="hidden timezone" data-select="{{section.settings.timezone}}"></div>
                      <div class="timer"><div class="middle"></div></div>
                    </div>
                  </div>
                  <div class="bn_count_down_text_and_button_container">
                    <h3 class="bn_count_down_buy_now_text" style="color:{{ section.settings.image_subheading_03_color}}">{{ section.settings.image_subheading_03}}</h3>
                    {% if section.settings.image_03_button_text != blank %}
                      <button class="bn_count_down_buy_now " onclick="location.href='{{ section.settings.url01}}'" style="color:{{ section.settings.image_03_button_text_color}};background-color:{{ section.settings.image_03_button_background_color}}">
                        {{ section.settings.image_03_button_text}}
                      </button>
                    {% endif %}
                  </div>
            </div>
          {% endif %}
        </div>
        
    </a>
  {% endif %}
  
</div>

