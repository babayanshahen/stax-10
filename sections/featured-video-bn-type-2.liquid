<div class="video-youtube" data-section-id="{{ section.id }}" data-section-type="featured-video-section-type-2">

  

  {% if section.settings.video_url == blank %}

    <iframe src="//www.youtube.com/embed/_9VUPq3SxOc?rel=0&showinfo=0&vq=720" width="850" height="480" frameborder="0" allowfullscreen></iframe>

  {% else %}
  <a class="bn-custom-video-container-link" href="{{ section.settings.video_type_2_link }}">
    <div class="bn-custom-video-container">
            <video muted="" playsinline="" autoplay="" loop="" preload="auto" style="width:100%" >
                  <source src="{{section.settings.video_url}}" type="video/mp4">
                    Your browser does not support HTML video.

            </video>
            {% if section.settings.heading != blank %}
                <div class="bn-custom-video-content">
                    <h2 class="bn-custom-video-heading">{{ section.settings.heading | escape }}</h2>
                    <p class="bn-custom-video-subheading">{{ section.settings.subheading | escape }}</p>
                  
                </div>
            {% endif %}
       <h2 class="bn-images-banner-title bn_i_w_t_b  bn_image_with_text_font_size" style="color:{{ section.settings.image_subheading_color}}; {% if section.settings.bn_alignment == true %} right:20px;left:auto;  {% endif %}">{{ section.settings.image_subheading}}</h2>
       <button class="bn_button_buy_now bn_video_button_size " style="color:{{ section.settings.image_button_text_color}};background-color:{{ section.settings.image_button_background_color}}">
                   {{ section.settings.image_button_text}}
                  </button>
  
        </div>
  </a>

  {% endif %}

</div>

{% schema %}
  {
    "name": "BN Video type 2",
    "class": "index-section featured-video-section-type-2",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading video type 2",
        "default": "Video"
      },
      {
        "type": "text",
        "id": "subheading",
        "label": "Subheading video type 2",
        "default": "Text"
      },
      {
        "id": "video_type_2_link",
        "type": "url",
        "label": "Link"
      },
      {
        "type": "url",
        "id": "video_url",
        "label": "Video link type 2"
      },
	{
        "type": "text",
        "id": "image_subheading",
        "label": "Text"
        
    },
 	{
        "type": "color",
        "id": "image_subheading_color",
        "label": "Text Color",
        "default": "#3D4246"
    },
	{
        "type": "text",
        "id": "image_button_text",
        "label": "Text",
        "default": "Shop Now"
    },
    {
        "type": "color",
        "id": "image_button_text_color",
        "label": "Button Text Color",
        "default": "#ffffff"
    },
    {
        "type": "color",
        "id": "image_button_background_color",
        "label": "Button Background Color",
        "default": "#000000"
    }
    ],
    "presets": [
      {
        "name": "BN Video type 2",
        "category": "Video"
      }
    ]
  }
{% endschema %}
